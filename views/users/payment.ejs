<div class="container my-5 col-md-10 col-sm-12"
style="min-height: 50vh">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
      <li class="breadcrumb-item"><a href="/shop/cart">Cart</a></li>
      <li class="breadcrumb-item active" aria-current="page">Payment</li>
    </ol>
    <h3 class="mb-4">Select Payment Method</h3>
  </nav>
  <div class="row">
    <div class="col-md-6">
    
      <form id="paymentForm" class="payment-form p-4 shadow-sm rounded bg-light">
        
        <div class="form-check mt-3">
          <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="COD" 
            <% if (orderData.totalAmount > 1000) { %> disabled <% } %> >
          <label class="form-check-label d-flex align-items-center ms-3" for="cod">
            <i class="fas fa-truck me-3 text-primary" style="font-size: 1.2em;"></i>
            <span class="ml-2">Cash On Delivery</span>
            <% if (orderData.totalAmount > 1000) { %>
              <small class="text-danger">(Not available for orders above ₹1000)</small>
            <% } %>
          </label>
        </div>
    
        <div class="form-check mt-4">
          <input class="form-check-input" type="radio" name="paymentMethod" id="wallet" value="Wallet"
          <% if (walletBalance===0) { %> disabled <% } %>>
          <label class="form-check-label d-flex align-items-center ms-3" for="wallet">
            <i class="fas fa-wallet me-3 text-success" style="font-size: 1.2em;"></i>
            <span class="ml-2">Wallet <small class="text-muted">(Balance: ₹<%= walletBalance %>)</small></span>
          </label>
        </div>
    
        <div class="form-check mt-4">
          <input class="form-check-input" type="radio" name="paymentMethod" id="razorpay" value="Razorpay" checked>
          <label class="form-check-label d-flex align-items-center ms-3" for="razorpay">
            <i class="fas fa-credit-card me-3 text-info" style="font-size: 1.2em;"></i>
            <span class="ml-2">Online Payment (Razorpay)</span>
          </label>
        </div>
    
        <button type="submit" class="btn btn-dark mt-5 w-100" id="confirmBtn" data-orderid="<%= orderData._id %>" data-finaltotal="<%= orderData.finalTotal %>">
          <i class="fas fa-check-circle me-3"></i>Confirm and Pay
        </button>
    
      </form>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Order Summary</h5>
          <hr>
          
          <h6>Shipping to:</h6>
          <p><%= orderData.location %>, <%= orderData.city %>, <%= orderData.state %>, <%= orderData.country %> - <%= orderData.zip %></p>

          <hr>

          <% orderData.cartItems.forEach(item => { %>
          <div class="d-flex justify-content-between mb-2">
            <span><strong><%= item.name %></strong> (x<%= item.quantity %>)</span>
            <span>₹<%= item.price %></span>
          </div>
          <% }) %>

          <div class="d-flex justify-content-between">
            <span>Subtotal:</span>
            <span>₹<%= orderData.totalAmount %></span>
          </div>

          <div class="d-flex justify-content-between">
            <span>Shipping Charge:</span>
            <span>₹<%= orderData.shippingCharge %></span>
          </div>

          <div class="d-flex justify-content-between text-success">
            <span>Discount Applied:</span>
            <span>-₹<%= orderData.discountApplied %></span>
          </div>

          <hr>
          <div class="d-flex justify-content-between">
            <strong>Grand Total:</strong>
            <strong>₹<%= orderData.finalTotal %></strong>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/payment.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>