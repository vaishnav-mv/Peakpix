<div class="container-fluid mt-3">
  <div class="row">
    <!-- Breadcrumb Navigation -->
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/admin" class="text-light">Admin</a>
        </li>
        <li class="breadcrumb-item active text-info" aria-current="page">
          User Management
        </li>
      </ol>
    </nav>
    <div class="container">
      <div class="row">
        <h3 class="mb-4 text-light">User Management</h3>
        <div class="table-responsive">
          <table class="table text-light">
            <thead>
              <tr>
                <th scope="col">Sl</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Gender</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <!-- Loop through users and display each user's details -->
              <% users.forEach((user, index) => { %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= user.firstName %> <%= user.lastName %></td>
                <td><%= user.email %></td>
                <td><%= user.mobile %></td>
                <td><%= user.gender %></td>
                <td>
                  <form
                    action="/admin/users/toggle-status/<%= user._id %>"
                    method="POST"
                    class="w-100"
                  >
                    <button
                      type="submit"
                      class="btn w-100 <%= user.status === 'Active' ? 'btn-outline-light' : 'btn-dark' %>"
                    >
                      <%= user.status === 'Active' ? 'Block' : 'Unblock' %>
                    </button>
                  </form>
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>