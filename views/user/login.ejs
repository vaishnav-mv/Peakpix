<div class="container my-5 py-5">
  <div class="row g-5">
    <div class="col-md-7 col-12 d-flex align-items-center img-container">
      <img src="/images/signin_image.webp" alt="Signup Image" class="signup-image" />
    </div>
    <div class="col-md-5 col-12">
      <div class="form-container">
        <h2>Login to Peakpix</h2>
        <p class="mb-4">Enter your details below to access your account.</p>
        <form id="loginForm">
          <div class="mb-4">
            <label for="email" class="form-label">Email address</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" />
          </div>
          <div class="mb-4">
            <label for="password" class="form-label">Password</label>
            <div class="input-group">
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" />
              <button type="button" id="togglePassword" class="btn btn-dark">
                <i class="fas fa-eye" id="eyeIcon"></i>
              </button>
            </div>
          </div>
          <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="/login/forgot-password" class="text-decoration-none">Forgot Password?</a>
          </div>
          <button type="submit" class="btn btn-primary w-100 py-2 mb-2">
            Log In
          </button>
          <button
            type="button"
            class="btn btn-outline-secondary w-100 py-2"
            id="googleSignInButton"
            onclick="window.location.href='/auth/google';"
          >
            <i class="bi bi-google"></i> Log in with Google
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
  .container {
    max-width: 900px;
  }
  .img-container img {
    max-width: 100%;
    border-radius: 0.5rem;
  }
  .form-container {
    background-color: #f8f9fa;
    border-radius: 0.5rem;
    padding: 2rem;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }
  .form-container h2 {
    font-weight: bold;
  }
  .form-container .alert {
    margin: 0;
  }
  .btn-dark {
    background-color: #343a40;
  }
  .btn-dark:hover {
    background-color: #23272b;
  }
</style>

<script src="/js/login-validation.js"></script>
<script src="/js/password-toggle.js"></script>